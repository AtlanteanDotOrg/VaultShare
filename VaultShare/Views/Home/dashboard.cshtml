<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>VaultShare - Dashboard</title>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">


    <style>
        body {
            background-color: #F8C471;
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box; 
        }
        .header {
            display: flex;
            justify-content: space-between;
            padding: 0 20px;
            align-items: center;
        }
        .header a {
            margin-left: 20px;
            color: #343a40;
            text-decoration: none;
        }
        .header a:hover { text-decoration: underline; }
        .dashboard-card {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            height: 300px;
        }
        .dashboard-card button { margin-top: 10px; }
        .card-title { font-weight: bold; }
        .notifications {
            background-color: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
        .notification-badge {
            font-size: 0.8rem;
            padding: 5px 10px;
            border-radius: 5px;
            color: white;
            display: inline-block;
        }
        .badge-error { background-color: #E74C3C; }
        .badge-group { background-color: #F39C12; }
        .badge-feature { background-color: #3498DB; }
        .badge-success { background-color: #2ECC71; }
        .container { position: relative; }
        .container h1 { text-align: center; }

        .friend-list {
            display: grid;
            grid-template-columns: 1fr 1fr; 
            list-style-type: none; 
            gap: 5px;
        }
        .friend-item {
            display: flex;
            align-items: center;
        }
        .profile-pic { margin-right: 10px; }

        .profile-pic img {
            width: 15px;
            height: 15px;
            border-radius: 50%;
            object-fit: cover;
        }
        .view-more-btn {
            width: 100%; 
            padding: 10px; 
            font-size: 12px; 
            border-radius: 15px; 
            background-color: #5A2D71;
            border-color: #5A2D71;
            position: relative;
            top: 10px;
            color: white;
        }
        .view-more-btn:hover, .view-more-btn2:hover {
            background-color: #452c63;
            border-color: #452c63;
        }
        .profile-pic2 { margin-right: 10px; }
        .profile-pic2 img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
        }
        .view-more-btn2 {
            width: 100%; 
            padding: 10px; 
            font-size: 12px;
            border-radius: 15px; 
            background-color: #5A2D71;
            border-color: #5A2D71;
            position: relative;
            bottom: 25px;
            color: white;
        }
        .container-boxes {
            position: relative;
            left: 325px;
        }

    </style>
</head>
<body data-google-id="@ViewData["GoogleId"]">
    <div class="container-boxes">
        <h1>Welcome, @ViewData["Username"]!</h1>
        <div class="row text-center mt-4">
            <div class="col-md-4">
                <div class="dashboard-card">
                    <h5 class="card-title">Transactions</h5>
                    <h2>$50 <small>/mo</small></h2>
                    <ul class="list-unstyled text-left">
                        <li>Payment Description 1 <span class="text-success">&#x2714;</span></li>
                        <li>Payment Description 2 <span class="text-success">&#x2714;</span></li>
                    </ul>
                    <button class="view-more-btn">View More</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="dashboard-card">
                    <h5 class="card-title">Balance</h5>
                    <h1>$100</h1>
                </div>
            </div>
        <div class="col-md-4">
            <div class="dashboard-card">
                <h5 class="card-title">Vaults</h5>
                <ul class="list-unstyled text-left">
                    @foreach (var vault in (List<Vault>)ViewData["Vaults"])
                    {
                        <li>
                            <strong>@vault.Name</strong>
                            <p>ID: @vault.VaultId</p>
                        </li>
                    }
                </ul>
            </div>
        </div>
        </div>
        <div class="notifications mt-4">
            <h5 class="card-title">Notifications</h5>
            <p><span class="badge badge-warning">Alert</span> Group Wallet Roomates payment requires 2 approvals</p>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const googleId = document.body.getAttribute("data-google-id");
            console.log("Google ID:", googleId); // For debugging
        });
    </script>
</body>
</html>
