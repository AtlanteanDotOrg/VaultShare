@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VaultShare - Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #F8C471; 
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .login-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            width: 300px;
            text-align: center;
        }
        .login-container h1 {
            font-weight: bold;
            color: #343a40;
        }
        .login-container p {
            font-size: 1.1rem;
            color: #6c757d;
        }
        .btn-purple {
            background-color: #6C3483;
            color: white;
        }
        .btn-purple:hover {
            background-color: #5B2C6F;
            color: white;
        }
        .custom-link {
            color: #6C3483;
            text-decoration: none;
        }
        .custom-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>VaultShare</h1>
        <p>A Group Wallet Solution</p>
        <form asp-controller="Home" asp-action="Dashboard" method="post">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-purple btn-block">Sign In</button>
            <a href="#" class="custom-link d-block mt-2">Forgot password?</a>
        </form>
        <!-- Updated Google Sign-In Link -->
        <a href="/Home/GoogleLogin" class="btn btn-purple btn-block">Sign in with Google</a>
        <a href="#" class="btn btn-purple mt-3">Register</a>
    </div>
</body>
</html>
