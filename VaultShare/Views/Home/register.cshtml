@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VaultShare - Register</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #F8C471; 
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .register-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            width: 300px;
            text-align: center;
        }
        .register-container h1 {
            font-weight: bold;
            color: #343a40;
        }
        .register-container p {
            font-size: 1.1rem;
            color: #6c757d;
        }
        .btn-purple {
            background-color: #6C3483;
            color: white;
        }
        .btn-purple:hover {
            background-color: #5B2C6F;
            color: white;
        }
        .custom-link {
            color: #6C3483;
            text-decoration: none;
        }
        .custom-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h1>Register</h1>
        <p>Create your account</p>
        <form id="registerForm" method="post" onsubmit="submitRegistration(event)">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Name" name="Name" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" name="Username" required>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" name="Email" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name="Password" required>
            </div>
            <button type="submit" class="btn btn-purple btn-block">Create Account</button>
            <a asp-controller="Home" asp-action="Login" class="custom-link d-block mt-2">Already have an account? Sign in</a>
        </form>

        <script>
        async function submitRegistration(event) {
            event.preventDefault(); // Prevent the default form submission

            const form = event.target;
            const formData = new FormData(form);
            const userData = {
                Name: formData.get('Name'),
                Username: formData.get('Username'),
                Email: formData.get('Email'),
                Password: formData.get('Password'), 
                Bio: "", // Optional, can be left empty
                ProfilePic: "" // Optional, can be left empty
            };



            const response = await fetch('/api/user/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(userData)
            });

            if (response.ok) {
                window.location.href = '/Home/Login'; // Update with your actual login URL
            } else {
                const errorResponse = await response.json();
                alert(errorResponse.message || 'Registration failed. Please try again.'); // Handle error messages
            }
        }
        </script>
    </div>
</body>

</html>
