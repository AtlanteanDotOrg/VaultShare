@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VaultShare - Password Reset</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { 
            background-color: #F8C471; 
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .reset-password-container{
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            width: 500px;
        }
        .reset-password-container h1 {
            font-weight: bold;
            color: #343a40;
            text-align: center;
        }
        .reset-password-container p {
            font-size: 1.1rem;
            color: #6c757d;
            text-align: center;
        }
        .btn-purple {
            background-color: #6C3483;
            color: white;
            width: 100%;
        }
        .btn-purple:hover {
            background-color: #5B2C6F;
            color: white;
        }
    </style>
</head>
<body>
<div class="reset-password-container">
    <h1>Reset Password</h1>
    <p>Enter your new password below.</p>
    <form asp-controller="Home" asp-action="SetNewPassword" method="post">
        <div class="form-group">
            <label for="newPassword">New Password:</label>
            <input type="password" class="form-control" name="newPassword" id="newPassword" placeholder="New Password" required>
        </div>
        <div class="form-group">
            <label for="confirmNewPassword">Confirm New Password:</label>
            <input type="password" class="form-control" name="confirmNewPassword" id="confirmNewPassword" placeholder="Confirm New Password" required>
        </div>
        <br>
        <a href="@Url.Action("Login", "Home")" class="btn btn-purple btn-block">Update Password</a>
    </form>
</div>

</body>
</html>
