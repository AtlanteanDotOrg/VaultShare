<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VaultShare - Sending Money</title>
            <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body { background-color: #F8C471; }
        .payment-container {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 600px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        .btn-purple {
            background-color: #6C3483;
            color: white;
        }
        .btn-purple:hover { background-color: #5B2C6F; }
        .amount-buttons .btn {
            margin: 5px;
            width: 125px;
            border-radius: 12px;
            background-color: #EFEFEF;
            border: 1px solid #ccc; 
            padding: 10px;
            cursor: pointer;
        }
        .amount-buttons .btn.active {
            background-color: #6C3483;
            color: white;
        }
        .btn-group { display: flex; }
        .btn-group .btn {
            flex: 1; 
            text-align: center;
        }
        .from-section, .to-section {
            background-color: #F2F3F4;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .from-section img, .to-section img {
            border-radius: 50%;
            width: 30px;
            height: 30px;
            margin-right: 10px;
        }
        .close-btn {
            float: right;
            cursor: pointer;
        }
        .add-recipient {
            color: #6C3483;
            cursor: pointer;
            text-decoration: none;
        }
        .add-recipient:hover {
            text-decoration: underline;
        }

        .payment-container img {
            border-radius: 50%;
            width: 50px;
            height: 50px;
            image-rendering:optimizeQuality;
        }

        .text-right {
            position: relative;
            left: 150px;
            text-align: right;
        }

        .text-right option { text-align: right; }
        
        .add-recipient-right {
            position: relative;
            text-align: right;
        }

        .submit-button-money {
            background-color: #6C3483; 
            color: white;
            width: 100%; 
            padding: 12px 20px; 
            border: none;
            border-radius: 10px; 
            font-size: 16px; 
            cursor: pointer; 
            margin-top: 20px; 
        }

        .submit-button-money:hover { background-color: #5A2D71; }

    </style>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const googleId = "@ViewData["GoogleId"]";
        fetchFriends(googleId);
        fetchVaults(googleId);
    });

    async function fetchFriends(googleId) {
        const response = await fetch(`/api/payment/friends/${googleId}`);
        const friends = await response.json();
        const recipientSelect = document.querySelector("#recipient-select");

        friends.forEach(friend => {
            const option = document.createElement("option");
            option.value = friend.id;
            option.textContent = `${friend.name} (#${friend.email})`;
            recipientSelect.appendChild(option);
        });
    }

    async function fetchVaults(googleId) {
        const response = await fetch(`/api/payment/vaults/${googleId}`);
        const vaults = await response.json();
        const vaultSelect = document.querySelector("#vault-select");

        vaults.forEach(vault => {
            const option = document.createElement("option");
            option.value = vault.vaultId;
            option.textContent = vault.name;
            vaultSelect.appendChild(option);
        });
    }

    async function sendPayment() {
        const amount = document.querySelector('.form-control.mb-3').value;
        const selectedVault = document.querySelector("#vault-select").value;
        const selectedRecipient = document.querySelector("#recipient-select").value;

        if (!selectedVault || !selectedRecipient) {
            alert("Please select both a vault and a recipient.");
            return;
        }

        const response = await fetch(`/api/payment/send`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                googleId: "@ViewData["GoogleId"]",
                vaultId: selectedVault,
                recipientId: selectedRecipient,
                amount: parseFloat(amount)
            })
        });

        if (response.ok) {
            alert("Payment sent successfully!");
        } else {
            const error = await response.json();
            alert("Failed to send payment: " + error.message);
        }
    }

    document.querySelector(".submit-button-money").addEventListener("click", sendPayment);
</script>

</head>
<body>
    <div class="payment-container">
        <div class="close-btn">&times;</div>
        <h5>Sending Money</h5>
        <p>How much would you like to send?</p>
        <input type="text" class="form-control mb-3" value="100.00">
        <div class="amount-buttons" role="group">
            <button type="button" class="btn">$10.00</button>
            <button type="button" class="btn">$50.00</button>
            <button type="button" class="btn active">$100.00</button>
            <button type="button" class="btn">$200.00</button>
        </div>
        <div class="from-section mt-4">
            <p>From</p>
            <select class="form-control" id="vault-select">
                <option value="">-- Select Vault --</option>
            </select>
        </div>

        <p>To</p>
        <select class="form-control" id="recipient-select">
            <option value="">-- Select Friend --</option>
        </select>

        <button class="submit-button-money">Send $100.00</button>
    </div>
</body>
</html>
