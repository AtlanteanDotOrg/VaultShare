<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VaultShare - Contributions & Transactions</title>
    <style>
        body {
            background-color: #F8C471; 
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        .container-boxes {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 20px;
        }

        .dashboard-card {
            background-color: #FFFFFF;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 100%;
            max-width: 300px;
            flex-grow: 1;
        }

        .dashboard-card h5 {
            font-size: 1.5em;
            color: #6C3483;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1em;
            font-weight: bold;
            color: #FFFFFF;
            background-color: #6C3483;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 15px;
        }

        .btn:hover {
            background-color: #5A2D71;
        }

        .transactions-section, .contributions-section {
            background-color: #FFFFFF;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .transaction-row, .contribution-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #E0E0E0;
        }

        .transaction-row:last-child, .contribution-row:last-child {
            border-bottom: none;
        }

        .avatar {
            border-radius: 50%;
            width: 50px;
            height: 50px;
            object-fit: cover;
            margin-right: 10px;
        }

        .amount-positive {
            color: #27AE60; 
        }

        .amount-negative {
            color: #E74C3C; 
        }

        .vault-members img {
            margin: 5px;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            border: 2px solid #6C3483;
        }

        .card-container {
            position: relative;
            width: 250px;
            height: 150px;
            margin: 20px auto;
            perspective: 1000px;
        }

        .credit-card {
            width: 100%;
            height: 100%;
            position: absolute;
            transform-style: preserve-3d;
            transform: rotateY(0);
            transition: transform 0.8s;
        }

        .card-front, .card-back {
            width: 100%;
            height: 100%;
            position: absolute;
            backface-visibility: hidden;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-front {
            background: linear-gradient(135deg, #6C3483, #8E44AD);
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .card-back {
            background-color: #FFFFFF;
            transform: rotateY(180deg);
            padding: 20px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: #6C3483;
        }

        .credit-card.flipped {
            transform: rotateY(180deg);
        }

        .flip-button {
            display: block;
            margin: 10px auto;
            padding: 10px 15px;
            background-color: #6C3483;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .flip-button:hover {
            background-color: #5A2D71;
        }
    </style>
</head>
<body>
    <div class="container-boxes">
        <div class="dashboard-card">
            <h5>Contributions</h5>
            <div id="contributions">
                @foreach (var member in ((Vault)ViewData["SelectedVault"]).Members)
                {
                    <div class="contribution-row">
                        <img src="path/to/profile/image" alt="Profile Picture" class="avatar">
                        <span>@member.Role</span>
                        <span class="amount-positive">$@member.UserId</span>
                    </div>
                }
            </div>
            <button class="btn">View More</button>
        </div>

        <div class="dashboard-card">
            <h5>Vault Balance</h5>
            <h2 id="vault-balance">
                $@((Vault)ViewData["SelectedVault"]).Balance
            </h2>
        </div>

        <div class="dashboard-card">
            <h5>Vault Credit Card</h5>
            <div class="card-container">
                <div class="credit-card" id="credit-card">
                    <div class="card-front">
                        <h4>VaultShare Card</h4>
                        <div class="card-number">**** **** **** 1234</div>
                        <div class="expiry">Exp: 05/29</div>
                    </div>
                    <div class="card-back">
                        <h4>Vault Details</h4>
                        <p>Card Number: 1234-5678-9012-3456</p>
                        <p>Expiration: 05/29</p>
                        <p>CVV: 123</p>
                    </div>
                </div>
            </div>
            <button class="flip-button" onclick="flipCard()">Flip Card</button>
        </div>

        <div class="dashboard-card">
            <h5>Vault Members</h5>
            <div id="vault-members">
                @foreach (var member in ((Vault)ViewData["SelectedVault"]).Members)
                {
                    <img src="path/to/member/image" alt="Profile Picture" class="avatar">
                }
            </div>
            <button class="btn">View More</button>
        </div>
    </div>

    <div class="transactions-section">
        <h5>Recent Transactions</h5>
        <div id="transactions">
            <!-- Add transaction rows dynamically -->
        </div>
    </div>

    <script>
        function flipCard() {
            const card = document.getElementById('credit-card');
            card.classList.toggle('flipped');
        }
    </script>
</body>
</html>
