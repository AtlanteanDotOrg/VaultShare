<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VaultShare - Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #F8C471;
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        .header {
            display: flex;
            justify-content: space-between;
            padding: 0 20px;
            align-items: center;
        }
        .header a {
            margin-left: 20px;
            color: #343a40;
            text-decoration: none;
        }
        .header a:hover {
            text-decoration: underline;
        }
        .dashboard-card {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            height: 300px;
        }
        .dashboard-card button {
            margin-top: 10px;
        }
        .card-title {
            font-weight: bold;
        }
        .notifications {
            background-color: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
        .container {
            position: relative;
        }
        .container h1 {
            text-align: center;
        }
        .balance-card h2 {
            color: #6C3483;
            font-weight: bold;
        }
    </style>
</head>
<body data-google-id="@ViewData["GoogleId"]">
    <div class="container-boxes">
        <h1>Welcome, @ViewData["Username"]!</h1>
        <div class="row text-center mt-4">
            <div class="col-md-4">
                <div class="dashboard-card balance-card">
                    <h5 class="card-title">Account Balance</h5>
                    <h2 id="user-balance">$@ViewData["Balance"]</h2>
                </div>
            </div>
            <div class="col-md-4">
                <div class="dashboard-card">
                    <h5 class="card-title">Transactions</h5>
                    <ul class="list-unstyled text-left">
                        <li>Payment Description 1 <span class="text-success">&#x2714;</span></li>
                        <li>Payment Description 2 <span class="text-success">&#x2714;</span></li>
                    </ul>
                    <button class="view-more-btn">View More</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="dashboard-card">
                    <h5 class="card-title">Vaults</h5>
                    <ul class="list-unstyled text-left">
                        @foreach (var vault in (List<Vault>)ViewData["Vaults"])
                        {
                            <li>
                                <strong>@vault.Name</strong>
                                <p>Balance: $@vault.Balance</p>
                                <p>ID: @vault.VaultId</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="notifications mt-4">
            <h5 class="card-title">Notifications</h5>
            <p><span class="badge badge-warning">Alert</span> Group Wallet Roommates payment requires 2 approvals</p>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const googleId = document.body.getAttribute("data-google-id");
            console.log("Google ID:", googleId); // Debugging purposes
        });
    </script>
</body>
</html>
