@{
    var activities = (List<ActivityModel>)ViewData["Activities"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VaultShare - Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


    <style>
        body {
            background-color: #F8C471;
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        .header {
            display: flex;
            justify-content: space-between;
            padding: 0 20px;
            align-items: center;
        }
        .header a {
            margin-left: 20px;
            color: #343a40;
            text-decoration: none;
        }
        .header a:hover {
            text-decoration: underline;
        }
        .dashboard-container {
            position: relative;
            border-radius: 10px;
            padding: 20px;
            width: 1200px;
        }
        .dashboard-page {
            display: flex;
            justify-content: center;
            align-items: center;
            height: calc(100vh - 100px);
        }
        .dashboard-card {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            height: 300px;
            display: flex;
            flex-direction: column; 
        }
        .dashboard-card button {
            margin-top: 10px;
        }
        .card-title {
            font-weight: bold;
        }
        .notifications {
            background-color: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
        .container {
            position: relative;
        }
        .container h1 {
            text-align: center;
        }
        .balance-card h2 {
            color: #6C3483;
            font-weight: bold;
        }
        .dashboard-card.balance-card{
            display: flex;
            flex-direction: column;
            justify-content: center; 
            align-items: center;  
            text-align: center;    
            padding: 20px;       
            box-shadow: none; 
            color: #6C3483;
            font-weight: bold;
        }
        .view-more-btn2 {
            background-color: #6C3483;
            border-color: #6C3483;
            color: white;
            width: 100%;
            border-radius: 10px;
            box-shadow: none; 
            outline: none; 
            margin-top: auto;
        }
        .view-more-btn2:hover {
            background-color: #6C3483;
            border-color: #6C3483;
        }
        .view-more-btn2:focus, .view-more-btn2:active {
            background-color: #6C3483 !important;  
            border-color: #6C3483 !important;     
            box-shadow: none;  
        }
    </style>
</head>

<body data-google-id="@ViewData["GoogleId"]">

<div class="dashboard-page">
    <div class="dashboard-container">
        <h1 style="color:#343a40; font-weight: bold">Welcome, @ViewData["Username"]!</h1>
        <div class="row text-center mt-4">
            <div class="col-md-4">
                <div class="dashboard-card">
                    <h5 class="card-title">Account Balance</h5>
                    <div class="dashboard-card balance-card">
                        <h1 id="user-balance">$@ViewData["Balance"]</h1>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="dashboard-card">
                    <h5 class="card-title">Transactions</h5>
                    <br>
                    <ul class="list-unstyled text-left">
                        @foreach (var activity in activities)
                        {
                            <li class="d-flex justify-content-between align-items-center">
                                <span>@activity.Description</span>
                                @if (activity.IsPaid)
                                {
                                    <span class="text-success">
                                        <i class="fas fa-check" style="color: green;"></i> <!-- Green checkmark -->
                                    </span>
                                }
                                else
                                {
                                    <span class="text-danger">
                                        <i class="fas fa-check" style="color: red;"></i> <!-- Green checkmark -->
                                    </span>
                                }
                            </li>
                        }
                    </ul>
                    <br>
                    <a href="@Url.Action("transactions", "Home")">
                        <button class="btn btn-primary view-more-btn2">View More</button>
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="dashboard-card">
                    <h5 class="card-title">Vaults</h5>
                    <ul class="list-unstyled text-left">
                        @foreach (var vault in (List<Vault>)ViewData["Vaults"])
                        {
                            <li>
                                <strong>@vault.Name</strong>
                                <p>Balance: $@vault.Balance</p>
                                <p>ID: @vault.VaultId</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="notifications mt-4">
            <h5 class="card-title">Notifications</h5>
            <p><span class="badge badge-warning">Alert</span> Group Wallet Roommates payment requires 2 approvals</p>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const googleId = document.body.getAttribute("data-google-id");
        console.log("Google ID:", googleId); // Debugging purposes
    });
</script>

</body>
</html>
